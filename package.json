{
  "name": "@logux/actions",
  "version": "0.0.0",
  "description": "Types and action creators for build-in Logux actions",
  "keywords": [
    "logux",
    "crdt",
    "types"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest --coverage && eslint . && check-dts && yaspeller *.md"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/actions",
  "sideEffects": false,
  "types": "./index.d.ts",
  "type": "module",
  "engines": {
    "node": "^12.0.0 || >=14.0.0"
  },
  "peerDependencies": {
    "@logux/core": "^0.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@logux/client": "logux/client#next",
    "@logux/core": "logux/core#next",
    "@logux/eslint-config": "^45.2.1",
    "@logux/sharec-config": "^0.9.0",
    "@logux/state": "logux/state",
    "@types/jest": "^26.0.21",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "check-dts": "^0.4.4",
    "eslint": "^7.22.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^29.0.0",
    "jest": "^27.0.0-next.2",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "simple-git-hooks": "^2.2.0",
    "ts-jest": "^27.0.0-next.4",
    "typescript": "^4.2.3",
    "yaspeller": "^7.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "globals": {
      "jsdom": false
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    },
    "overrides": [
      {
        "files": "./processing/index.d.ts",
        "rules": {
          "prefer-let/prefer-let": "off",
          "import/export": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "GraphQL",
      "roadmap",
      "Logux"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.9.0"
  }
}
